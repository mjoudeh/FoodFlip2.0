<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gt.foodflip" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:supportsRtl="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubmitScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EntryScreenActivity"
            android:label="Food Flip" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.categoy.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountScreenActivity"
            android:label="Food Flip" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.categoy.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddCommentActivity"
            android:label="Food Flip" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.categoy.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
